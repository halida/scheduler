%tr
  %td
    = link_to "##{item.id}", item
    .pull-right= render_enabled(item.enabled)
  %td
    .p
      %strong= item.name
    .p= simple_format item.description

  %td
    - if item.token.present?
      %button.btn.btn-link.ps-0{type: :button, data: {bs: {target: "#application-#{item.id}-token", toggle: :modal}}}
        API Token

      .modal.fade{id: "application-#{item.id}-token", "aria-hidden" => "true", role: :dialog, :tabindex => "-1"}
        .modal-dialog
          .modal-content
            .modal-header
              %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
            .modal-body
              %pre= item.token


  %td
    .btn-group.float-end{:role => "group"}
      %button.btn.btn-default.btn-xs.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
        %span.caret
      %ul.dropdown-menu
        %li.divider{:role => "separator"}
        %li= link_to "Edit", [:edit, item]
        %li= link_to "Delete", item, data: {turbo_method: :delete, turbo_confirm: "Are you sure to delete ##{item.name}?"}
