.mb-2.float-start
  = form_tag url_for, method: :get do
    = link_to "New", [:new, :application], class: 'btn btn-outline-success'
    %span.py-2
    = text_field_tag :keyword, params[:keyword], placeholder: "Title", class: "form-control", style: "display: inline; width: 200px"
    = submit_tag "Search", class: "btn btn-primary"

= render "list", items: @items
