.form-block
  = simple_form_for @item, as: :item do |f|
    = form_errors(f)

    = f.input :username
    = f.input :email
    = render "profile", f: f
    = f.input :status, collection: ['active', 'locked']
    -# %hr
    -# = f.input :password
    -# = f.input :password_confirmation

    .mb-2
      = f.submit "Submit", class: 'btn btn-success'
      = link_to "Cancel", :users, class: 'btn btn-outline-primary'
