.form-block
  = simple_form_for @item, as: :item do |f|
    = form_errors(f)

    = f.input :plan_id, collection: Plan.enabled.pluck(:title, :id)
    = f.input :config, hint: link_to("Document", "https://devhints.io/cron", target: :_blank)
    = f.input :modify
    = f.input :timezone, collection: User.timezones.keys
    = f.input :enabled

    .mb-2
      = f.submit "Submit", class: 'btn btn-success'
      = link_to "Cancel", :back, class: 'btn btn-outline-primary'
