.form-block
  = simple_form_for @item, as: :item do |f|
    = f.input :title
    = f.input :execution_type
    = f.input :parameters_text, as: :text
    = f.input :enabled

    .margin-bottom
      = f.submit "Submit", class: 'btn btn-success'
      = link_to "Cancel", :execution_methods, class: 'btn btn-default'


