.p{style: "float: left; margin-bottom: 10px"}
  = form_for url_for, method: :get do |f|
    Errors:
    - error_count = items.where(status: Execution::ERROR_STATUS).count
    = link_to (error_count > 0 ? error_count : "None"), url_for(status: Execution::ERROR_STATUS), style: 'margin-right: 10px', class: ('btn btn-danger' if error_count > 0)

    = render partial: "shared/during"

    %span Status
    = select_tag :status, options_for_select(Execution.status.values - ['initialize'], params[:status]), include_blank: true, style: "width: 300px; margin: 0; vertical-align: top", multiple: true, class: "select2"
    = check_box_tag :include_initialize, '1', params[:include_initialize]
    Include Initialize
    = submit_tag "Search", class: 'btn btn-default'
